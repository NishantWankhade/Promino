<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farmer_dealer_main_page"
    tools:context=".farmerActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="174dp"
        android:layout_height="109dp"
        android:fontFamily="@font/comic_neue_bold_italic"
        android:gravity="center"
        android:text="Upload Your Details "
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/UploadFarmer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="174dp"
        android:layout_height="109dp"
        android:fontFamily="@font/comic_neue_bold_italic"
        android:gravity="center"
        android:text="Search all the details of dealer :)"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318" />

    <Button
        android:id="@+id/UploadFarmer"
        android:layout_width="191dp"
        android:layout_height="99dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/rounded_view"
        android:fontFamily="@font/comic_neue_bold_italic"
        android:text="Upload"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/searchProduct"
        app:layout_constraintVertical_bias="0.018" />

    <Button
        android:id="@+id/searchProduct"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:background="@drawable/rounded_view"
        android:fontFamily="@font/comic_neue_bold_italic"
        android:text="Search"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />
</androidx.constraintlayout.widget.ConstraintLayout>